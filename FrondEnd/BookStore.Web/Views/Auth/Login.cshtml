@using BookStore.Web.Models.AuthDtos
@model LoginRequestDto


<form method="post">
    <div class="container border-info-subtle p-4 mt-5">
        <div class="row text-center">
            <h1>Login</h1>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger">

            </div>
            <div class="row">
                <div class="col-6 offset-3 pb-4">
                    <input asp-for="UserName" class="form-control" placeholder="Username..." />
                    <span asp-validation-for="UserName"></span>
                </div>
                <div class="col-6 offset-3 pb-4">
                    <input asp-for="Password" class="form-control" placeholder="Pasword..." />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="col-6 offset-3 pb-4">
                    <button type="submit" class="form-control btn btn-primary" value="Submit" >Login</button>
                </div>
                

            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}