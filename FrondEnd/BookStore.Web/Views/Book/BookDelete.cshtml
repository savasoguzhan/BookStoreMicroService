@model BookDto
<form asp-action="BookDelete">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Delete</h1>
        <input hidden asp-for="BookId" />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Name</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-control" />
                
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Category Name</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CategoryName" disabled class="form-control" />
                
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Unit Price</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="UnitPrice" disabled class="form-control" />
               
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Stock</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Stock" disabled class="form-control" />
               
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">ISBNNO</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ISBNNO"  disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Publisher</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Publisher" disabled class="form-control" />
               
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Author</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Author" disabled class="form-control" />
                
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">ImageUrl</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" disabled />
            </div>
            <div class="col-5 offset-2">

                <a asp-action="BookIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

